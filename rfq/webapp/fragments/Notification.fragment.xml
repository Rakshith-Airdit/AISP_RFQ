<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Popover
        id="toolPopover"
        placement="Left"
        contentHeight="400px"
        contentWidth="450px"
        showHeader="false"
        ariaLabelledBy="master-title"
    >
        <NavContainer id="idNavContainer">
            <Page
                id="master"
                title="Materials"
            >
                <ScrollContainer
                    focusable="false"
                    height="auto"
                    horizontal="true"
                    vertical="false"
                    width="auto"
                >
                    <content>
                        <List
                            backgroundDesign="Solid"
                            items="{rfqItemsData>/results}"
                        >
                            <StandardListItem
                                type="Navigation"
                                press="onStandardListItemPress"
                                title="{rfqItemsData>MaterialDesc}"
                            />
                        </List>
                    </content>
                </ScrollContainer>
            </Page>
            <Page
                id="chatPageID"
                title="Negotiation Tool"
                showNavButton="true"
                navButtonPress="onGoBackPress"
            >
                <VBox>
                    <List
                        backgroundDesign="Solid"
                        items="{rfqItemsData>/Negotiation}"
                        id="idNegotiationList"
                    >
                        <CustomListItem accDescription="">
                            <content>
                                <HBox
                                    alignItems="End"
                                    direction="RowReverse"
                                >
                                    <Text
                                        class="sapUiTinyMarginEnd"
                                        text="Quoted Price : Rs"
                                    />
                                </HBox>
                                <HBox
                                    class="sapUiTinyMarginTop"
                                    justifyContent="SpaceBetween"
                                >
                                    <Text
                                        text="{rfqItemsData>messageContent}"
                                        class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                                    />
                                </HBox>
                                <HBox
                                    alignItems="End"
                                    direction="RowReverse"
                                >
                                    <Avatar
                                        badgeIcon="sap-icon://supplier"
                                        class="sapUiTinyMarginEnd sapUiTinyMarginBegin"
                                    />
                                    <Button
                                        id="idAcceptButton"
                                        class="sapUiTinyMarginBegin sapUiTinyMarginBottom"
                                        text="Accept"
                                        type="Accept"
                                        press="onAcceptPriceButtonPress"
                                    />
                                    <Button
                                        id="idRejectButton"
                                        type="Reject"
                                        text="Reject"
                                        class="sapUiTinyMarginBegin sapUiTinyMarginBottom"
                                        press="onRejectButtonPress"
                                    />
                                    <Button
                                        id="idBestOffer"
                                        type="Emphasized"
                                        text="Best Offer"
                                        class="sapUiTinyMarginBegin sapUiTinyMarginBottom"
                                        press="onBestOfferButtonPress"
                                    />
                                </HBox>
                            </content>
                        </CustomListItem>
                    </List>
                </VBox>
            </Page>
        </NavContainer>
        <footer>
            <Toolbar>
                <content>
                    <Button
                        text="close"
                        press="closePopover"
                    />
                </content>
            </Toolbar>
        </footer>
    </Popover>
</c:FragmentDefinition>
